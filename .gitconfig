[push]
	default = current

[alias]
	# already provided by git-extras
	# undo = reset HEAD~1 --mixed
	unadd = !git reset --hard
	fza = "!git ls-files -m -o --exclude-standard | fzf --print0 -m | xargs -0 -t -o git add"

